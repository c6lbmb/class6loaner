---
const {
  title = "Class6Loaner",
  description = "Safety-first riding and road-test education for motorcycle Class 6.",
  canonicalPath = "/",
} = Astro.props;

const canonicalUrl = `https://class6loaner.com${canonicalPath}`;

// Optional city context (used to keep sponsors + links local once a visitor picks a city)
const citySlug = Astro.url.searchParams.get("city");

// Active nav highlight
const path = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === "/") return path === "/";
  return path === href || path.startsWith(href + "/");
};

// Helper: keep city context when navigating around the site
function withCity(p: string) {
  if (!citySlug) return p;
  if (p.startsWith("http")) return p;
  return `${p}${p.includes("?") ? "&" : "?"}city=${encodeURIComponent(citySlug)}`;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <style>
      :root {
        --bg: #f8fafc;
        --card: #ffffff;
        --ink: #0f172a;
        --muted: #475569;
        --border: #e2e8f0;
        --max: 1120px;

        /* Brand accent (orange) */
        --accent: #f59e0b;
        --accent-ink: #7c2d12;
        --accent-soft: rgba(245, 158, 11, 0.14);
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background: var(--bg);
        color: var(--ink);
        line-height: 1.5;
      }

      a { color: inherit; }

      .wrap { max-width: var(--max); margin: 0 auto; padding: 18px 18px; }

      /* NAV */
      .nav {
        border-bottom: 1px solid var(--border);
        background: rgba(248,250,252,.88);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 10;
      }

      /* IMPORTANT: nav links should never be underlined (mobile panel too) */
      .nav a { text-decoration: none; }

      .navInner {
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap: 14px;
      }

      .brand {
        display:flex;
        align-items:center;
        gap: 10px;
        text-decoration:none;
        min-width: 210px;
      }

      .brand img { height: 40px; width: auto; display:block; }
      .brand .name { font-weight: 1000; letter-spacing: .2px; }

      .pill {
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding: 6px 10px;
        border-radius:999px;
        border:1px solid var(--border);
        background: rgba(255,255,255,.75);
        color: var(--muted);
        font-size: 13px;
        font-weight: 800;
      }

      /* Desktop links */
      .links {
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items:center;
        justify-content:center;
      }

      .links a {
        color: var(--muted);
        font-weight: 900;
        font-size: 14px;
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid transparent;
        line-height: 1;
      }

      .links a:hover {
        color: var(--ink);
        background: rgba(255,255,255,.65);
        border-color: var(--border);
      }

      .links a.active {
        color: var(--accent-ink);
        background: var(--accent-soft);
        border-color: rgba(245, 158, 11, 0.35);
      }

      .cta {
        display:inline-flex;
        align-items:center;
        gap: 10px;
        padding: 10px 14px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--card);
        text-decoration:none;
        font-weight: 1000;
        white-space: nowrap;
      }
      .cta:hover { border-color: #cbd5e1; }

      /* Mobile menu button (HIDDEN on desktop) */
      .menuBtn {
        display:none;
        align-items:center;
        gap:8px;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.75);
        font-weight: 1000;
        cursor: pointer;
        white-space: nowrap;
      }

      /* Mobile menu panel */
      .menuPanel {
        display:none;
        border-top: 1px solid var(--border);
        background: rgba(248,250,252,.92);
      }
      .menuPanelInner {
        display:grid;
        gap: 10px;
        padding-top: 12px;
        padding-bottom: 14px;
      }

      /* Make the mobile links look like obvious separate buttons */
      .menuPanel a {
        display:block;
        font-weight: 950;
        color: var(--muted);
        padding: 12px 12px;
        border-radius: 14px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.92);
        line-height: 1.1;
      }
      .menuPanel a:hover {
        color: var(--ink);
        border-color: #cbd5e1;
        background: rgba(255,255,255,1);
      }
      .menuPanel a.active {
        color: var(--accent-ink);
        background: var(--accent-soft);
        border-color: rgba(245, 158, 11, 0.35);
      }

      /* LAYOUT + COMPONENTS */
      .card { background: var(--card); border: 1px solid var(--border); border-radius: 18px; padding: 18px; }
      .muted { color: var(--muted); }
      .grid { display:grid; gap: 14px; }

      @media (min-width: 980px) {
        .grid-2 { grid-template-columns: 1.3fr .7fr; align-items: start; }
        .grid-3 { grid-template-columns: repeat(3, 1fr); }
      }

      /* TYPOGRAPHY NORMALIZATION */
      main h1, main h2, main h3 {
        margin: 0 0 10px;
        letter-spacing: -0.01em;
      }
      main h1 { font-size: clamp(28px, 3.2vw, 40px); line-height: 1.08; }
      main h2 { font-size: clamp(20px, 2.2vw, 28px); line-height: 1.12; }
      main h3 { font-size: 18px; line-height: 1.2; }

      main p { margin: 10px 0; }
      main ul, main ol { margin: 10px 0; padding-left: 22px; }
      main li { margin: 6px 0; }

      footer { border-top: 1px solid var(--border); margin-top: 28px; }
      .tiny { font-size: 13px; color: var(--muted); }

      /* RESPONSIVE: mobile nav becomes dropdown */
      @media (max-width: 860px) {
        .wrap { padding: 14px 14px; }
        .brand { min-width: unset; }
        .brand img { height: 34px; }

        .links { display:none; }
        .menuBtn { display:inline-flex; }

        .cta { padding: 9px 12px; }
      }

      /* HARD GUARANTEE: Menu button/panel never appear on desktop */
      @media (min-width: 861px) {
        .menuBtn { display:none !important; }
        .menuPanel { display:none !important; }
      }
    </style>
  </head>

  <body>
    <header class="nav">
      <div class="wrap navInner">
        <a class="brand" href={withCity("/")}>
          <img src="/images/logo.png" alt="Class6Loaner logo" />
          <span class="name">Class6Loaner</span>
          {citySlug && <span class="pill" title="Local context is on">City mode ✓</span>}
        </a>

        <!-- Desktop nav (no Cities link) -->
        <nav class="links" aria-label="Primary">
          <a class={isActive("/how-it-works") ? "active" : ""} href={withCity("/how-it-works")}>How it works</a>
          <a class={isActive("/road-test-guide") ? "active" : ""} href={withCity("/road-test-guide")}>Road test guide</a>
          <a class={isActive("/mentor-guide") ? "active" : ""} href={withCity("/mentor-guide")}>Mentor guide</a>
          <a class={isActive("/become-a-mentor") ? "active" : ""} href={withCity("/become-a-mentor")}>Become a mentor</a>
        </nav>

        <!-- Mobile menu button -->
        <button class="menuBtn" type="button" aria-expanded="false" aria-controls="mobileMenu" id="menuBtn">
          Menu ▾
        </button>

        <a class="cta" href="https://borrowmybike.ca" rel="noopener" target="_blank">
          Go to app →
        </a>
      </div>

      <!-- Mobile menu panel -->
      <div class="menuPanel" id="mobileMenu" hidden>
        <div class="wrap menuPanelInner">
          <a class={isActive("/how-it-works") ? "active" : ""} href={withCity("/how-it-works")}>How it works</a>
          <a class={isActive("/road-test-guide") ? "active" : ""} href={withCity("/road-test-guide")}>Road test guide</a>
          <a class={isActive("/mentor-guide") ? "active" : ""} href={withCity("/mentor-guide")}>Mentor guide</a>
          <a class={isActive("/become-a-mentor") ? "active" : ""} href={withCity("/become-a-mentor")}>Become a mentor</a>
          <a href="https://borrowmybike.ca" rel="noopener" target="_blank">Go to app →</a>
        </div>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer>
      <div class="wrap">
        <div class="tiny" style="display:flex; gap:14px; flex-wrap:wrap; align-items:center; justify-content:space-between;">
          <div>© {new Date().getFullYear()} Class6Loaner • Canada-born • Education + safety-first community</div>
          <div>
            Educational content only. Bookings happen on <a href="https://borrowmybike.ca" rel="noopener" target="_blank">borrowmybike.ca</a>.
          </div>
        </div>
      </div>
    </footer>

    <script is:inline>
      // Persist "city mode" so visitors keep local context across pages
      (function () {
        try {
          const url = new URL(window.location.href);
          const city = url.searchParams.get("city");
          if (city) {
            localStorage.setItem("c6l_city", city);
          } else {
            const saved = localStorage.getItem("c6l_city");
            if (saved) {
              document.querySelectorAll('a[href^="/"]').forEach((a) => {
                const href = a.getAttribute("href");
                if (!href) return;
                if (href.includes("city=")) return;
                const joiner = href.includes("?") ? "&" : "?";
                a.setAttribute("href", href + joiner + "city=" + encodeURIComponent(saved));
              });
            }
          }
        } catch {}
      })();

      // Mobile menu toggle
      (function () {
        const btn = document.getElementById("menuBtn");
        const panel = document.getElementById("mobileMenu");
        if (!btn || !panel) return;

        function setOpen(open) {
          btn.setAttribute("aria-expanded", open ? "true" : "false");
          panel.hidden = !open;
          panel.style.display = open ? "block" : "none";
        }

        let open = false;
        setOpen(false);

        btn.addEventListener("click", () => {
          open = !open;
          setOpen(open);
        });

        // close when clicking a link
        panel.querySelectorAll("a").forEach((a) => {
          a.addEventListener("click", () => {
            open = false;
            setOpen(false);
          });
        });
      })();
    </script>
  </body>
</html>
