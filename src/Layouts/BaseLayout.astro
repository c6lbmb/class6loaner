---
const {
  title = "Class6Loaner",
  description = "Safety-first riding and road-test education for motorcycle Class 6.",
  canonicalPath = "/",
} = Astro.props;

const canonicalUrl = `https://class6loaner.com${canonicalPath}`;

// Optional city context (used to keep sponsors + links local once a visitor picks a city)
const citySlug = Astro.url.searchParams.get("city");

// Helper: keep city context when navigating around the site
function withCity(path: string) {
  if (!citySlug) return path;
  if (path.startsWith("http")) return path;
  return `${path}${path.includes("?") ? "&" : "?"}city=${encodeURIComponent(citySlug)}`;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <style>
      :root {
        --bg: #f8fafc;
        --card: #ffffff;
        --ink: #0f172a;
        --muted: #475569;
        --border: #e2e8f0;
        --max: 1120px;
      }
      * { box-sizing: border-box; }
      body { margin: 0; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; background: var(--bg); color: var(--ink); }
      a { color: inherit; }
      .wrap { max-width: var(--max); margin: 0 auto; padding: 18px 18px; }
      .nav { display:flex; align-items:center; justify-content:space-between; gap: 14px; border-bottom: 1px solid var(--border); background: rgba(248,250,252,.85); backdrop-filter: blur(8px); position: sticky; top: 0; z-index: 10; }
      .brand { display:flex; align-items:center; gap: 10px; text-decoration:none; }
      .brand img { height: 40px; width: auto; display:block; }
      .brand .name { font-weight: 1000; letter-spacing: .2px; }
      .links { display:flex; gap: 14px; flex-wrap: wrap; align-items:center; }
      .links a { text-decoration:none; color: var(--muted); font-weight: 800; font-size: 14px; }
      .links a:hover { color: var(--ink); }
      .cta { display:inline-flex; align-items:center; gap: 10px; padding: 10px 14px; border-radius: 999px; border: 1px solid var(--border); background: var(--card); text-decoration:none; font-weight: 1000; }
      .cta:hover { border-color: #cbd5e1; }
      .card { background: var(--card); border: 1px solid var(--border); border-radius: 18px; padding: 18px; }
      .muted { color: var(--muted); }
      .grid { display:grid; gap: 14px; }
      @media (min-width: 980px) {
        .grid-2 { grid-template-columns: 1.3fr .7fr; align-items: start; }
        .grid-3 { grid-template-columns: repeat(3, 1fr); }
      }
      footer { border-top: 1px solid var(--border); margin-top: 28px; }
      .tiny { font-size: 13px; color: var(--muted); }
      .pill { display:inline-flex; align-items:center; gap:8px; padding: 6px 10px; border-radius:999px; border:1px solid var(--border); background: rgba(255,255,255,.7); }
    </style>
  </head>

  <body>
    <header class="nav">
      <div class="wrap" style="display:flex; align-items:center; justify-content:space-between; gap:14px;">
        <a class="brand" href={withCity("/")}>
          <img src="/images/logo.png" alt="Class6Loaner logo" />
          <span class="name">Class6Loaner</span>
          {citySlug && <span class="pill" title="Local context is on">City mode ✓</span>}
        </a>

        <nav class="links" aria-label="Primary">
          <a href={withCity("/how-it-works")}>How it works</a>
          <a href={withCity("/road-test-guide")}>Road test guide</a>
          <a href={withCity("/mentor-guide")}>Mentor guide</a>
          <a href={withCity("/become-a-mentor")}>Become a mentor</a>
          <a href={withCity("/cities")}>Cities</a>
        </nav>

        <a class="cta" href="https://borrowmybike.ca" rel="noopener" target="_blank">
          Go to app →
        </a>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer>
      <div class="wrap">
        <div class="tiny" style="display:flex; gap:14px; flex-wrap:wrap; align-items:center; justify-content:space-between;">
          <div>© {new Date().getFullYear()} Class6Loaner • Canada-born • Education + safety-first community</div>
          <div>
            Educational content only. Bookings happen on <a href="https://borrowmybike.ca" rel="noopener" target="_blank">borrowmybike.ca</a>.
          </div>
        </div>
      </div>
    </footer>

    <script is:inline>
      // Persist "city mode" so visitors keep local sponsors across pages
      (function () {
        try {
          const url = new URL(window.location.href);
          const city = url.searchParams.get("city");
          if (city) {
            localStorage.setItem("c6l_city", city);
          } else {
            const saved = localStorage.getItem("c6l_city");
            if (saved) {
              // If user already picked a city, keep it on internal nav links
              document.querySelectorAll('a[href^="/"]').forEach((a) => {
                const href = a.getAttribute("href");
                if (!href) return;
                if (href.includes("city=")) return;
                const joiner = href.includes("?") ? "&" : "?";
                a.setAttribute("href", href + joiner + "city=" + encodeURIComponent(saved));
              });
            }
          }
        } catch {}
      })();
    </script>
  </body>
</html>
