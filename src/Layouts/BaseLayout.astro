---
const {
  title = "Class6Loaner",
  description = "Safety-first road test education for motorcycle Class 6.",
  canonicalPath = "/",
} = Astro.props;

const canonicalUrl = `https://class6loaner.com${canonicalPath}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <style>
      :root {
        --bg: #f8fafc;
        --card: #ffffff;
        --ink: #0f172a;
        --muted: #475569;
        --border: #e2e8f0;
        --max: 1120px;
      }
      * { box-sizing: border-box; }
      body { margin: 0; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; background: var(--bg); color: var(--ink); }
      a { color: inherit; }
      .wrap { max-width: var(--max); margin: 0 auto; padding: 18px 18px; }
      .nav { display:flex; align-items:center; justify-content:space-between; gap: 14px; border-bottom: 1px solid var(--border); background: rgba(248,250,252,.85); backdrop-filter: blur(8px); position: sticky; top: 0; z-index: 10; }
      .brand { display:flex; align-items:center; gap: 10px; text-decoration:none; }
      .brand img { height: 40px; width: auto; display:block; }
      .brand .name { font-weight: 1000; letter-spacing: .2px; }
      .links { display:flex; gap: 14px; flex-wrap: wrap; align-items:center; }
      .links a { text-decoration:none; color: var(--muted); font-weight: 800; font-size: 14px; }
      .links a:hover { color: var(--ink); }
      .cta { display:inline-flex; align-items:center; gap: 10px; padding: 10px 14px; border-radius: 999px; border: 1px solid var(--border); background: var(--card); text-decoration:none; font-weight: 1000; }
      .cta:hover { border-color: #cbd5e1; }
      .card { background: var(--card); border: 1px solid var(--border); border-radius: 18px; padding: 18px; }
      .muted { color: var(--muted); }
      .grid { display:grid; gap: 14px; }
      @media (min-width: 980px) {
        .grid-2 { grid-template-columns: 1.3fr .7fr; align-items: start; }
        .grid-3 { grid-template-columns: repeat(3, 1fr); }
      }
      footer { border-top: 1px solid var(--border); margin-top: 28px; }
      .tiny { font-size: 13px; color: var(--muted); }
    </style>
  </head>

  <body>
    <header class="nav">
      <div class="wrap" style="display:flex; align-items:center; justify-content:space-between; gap:14px;">
        <a class="brand" href="/">
          <img src="/images/logo.png" alt="Class6Loaner logo" />
          <span class="name">Class6Loaner</span>
        </a>

        <nav class="links" aria-label="Primary">
          <a href="/how-it-works">How it works</a>
          <a href="/road-test-guide">Road test guide</a>
          <a href="/mentor-guide">Mentor guide</a>
          <a href="/cities">Cities</a>
        </nav>

        <a class="cta" href="https://borrowmybike.ca" rel="noopener" target="_blank">
          Go to app →
        </a>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer>
      <div class="wrap">
        <div class="tiny" style="display:flex; gap:14px; flex-wrap:wrap; align-items:center; justify-content:space-between;">
          <div>© {new Date().getFullYear()} Class6Loaner • Education + safety-first community</div>
          <div>
            This is educational content only. Bookings happen on <a href="https://borrowmybike.ca" rel="noopener" target="_blank">borrowmybike.ca</a>.
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
 